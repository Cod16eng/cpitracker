<%= render "shared/errors", obj: @research %>
<%= form_with(model: research, local: true) do |form| %>

  <div class="field">
    <%= form.hidden_field :user_id, id: :research_user_id,html: {class:"form-horizontal", role: "form"} %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :research_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, id: :research_status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :docs %>
    <%= form.text_area :docs, class: "form-control", size: "60x12" %>
  </div>

  <div class="form-group">
    <%= form.label :research %>
    <%= form.file_field :research, id: :research_research %>
  </div>

  <div align="center" class="form-group">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
