<h1 align="center">Edit Participant</h1>

<%= render "shared/errors", obj: @participant %>

<%= form_for(@participant, html: {class:"form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :first_name %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :first_name, class: "form-control", placeholder: "Enter First name", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :last_name %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Last name", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :email %>
    </div>
    <div class="col-sm-8">
	  <%= f.email_field :email, class: "form-control", placeholder: "exemple@example.com", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :qualification %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :qualification, class: "form-control", size: "60x12" %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :city %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :city, class: "form-control" %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :ascherip, 'Ascheri & Partners', class: "input_checkbox" %>
    </div>
    <div class="col-sm-8">
	  <%= f.check_box :ascherip, class: "checkbox" %>
    </div>
</div>

 <hr>
<div class="form-group">
	<div class="row">
		<div class="">
			<%= f.collection_check_boxes :webinar_ids, Webinar.all, :id, :name do |cb| %>
			<% cb.label(class: "checkbox input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
			<% end %>
		</div>
	</div>
</div>

<% if @participant.webinars.exists?  %>
<div class="form-group" >
	<div class="row" >
		<div class="" > <hr><hr>
		  <%= f.fields_for :participant_webinars do |d| %>
		  <%= d.hidden_field :participant_id, value: @participant.id %>
		  <%= render 'participants/participantconnected', d: d %>
		  <% end %>
		</div>
	</div>
</div>
  <% end %>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-8">
  <%= f.submit class: 'btn btn-primary btn-lg' %>
</div>
</div>

<% end %>

<div class="col-xs-12" align="center">
[ <%= link_to  "Cancel and return to All Participant ", participants_path%> ]
</div>
