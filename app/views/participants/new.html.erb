<h1 align="center">New Participant</h1>

<%= render "shared/errors", obj: @participant %>

<%= form_for(@participant, html: {class:"form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :first_name %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :first_name, class: "form-control", placeholder: "Enter First name", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :last_name %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Last name", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :email %>
    </div>
    <div class="col-sm-8">
	  <%= f.email_field :email, class: "form-control", placeholder: "exemple@example.com", autofocus: true %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :qualification %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :qualification, class: "form-control", size: "60x12" %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :city %>
    </div>
    <div class="col-sm-8">
	  <%= f.text_field :city, class: "form-control" %>
    </div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">	 
	  <%= f.label :ascherip, 'Ascheri & Partners', class: "input_checkbox" %>
    </div>
    <div class="col-sm-8">
	  <%= f.check_box :ascherip, class: "checkbox" %>
    </div>
</div>
<hr>
<div class="form-group">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<%= f.collection_check_boxes :webinar_ids, Webinar.all, :id, :name do |cb| %>
			<% cb.label(class: "checkbox input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
			<% end %>
		</div>
	</div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-8">
  <%= f.submit class: 'btn btn-primary btn-lg' %>
</div>
</div>
  
<% end %>



<div class="col-xs-12" align="center">
[ <%= link_to  "Cancel and return to All Participant ", participants_path%> ]
</div>
<div class="col-xs-12"><hr></div>


<div class="col-sm-4 col-sm-offset-4">		
		<h3 align="center">Import Participants</h3><br>
		<%= form_tag import_participants_path, multipart: true  do %>
		<span class="btn btn-xs btn-warning btn-file">
           Choose File
             <%= file_field_tag :file %>
        </span><br><br>
		
		<%= submit_tag "Upload participants",class: 'btn btn-xs btn-success' %>
		<% end %><br>		
		
</div>





